<%- include("header") -%>
<div class="jumbotron" id="jumbo">
    <h1 id="header1" style="color:white;">Home</h1>
    <h4 id="header"><%=homeTitle%></h4>
</div>
<div class="container-fluid" id="headers">
    <h2>Instructions:</h2>
    <h4>
        <ol>
            <li>Think what you want to write.</li>
            <li>Go to Compose Section</li>
            <li>Compose your post and hit the publish button.</li>
            <li>If you want to delete the post hit the "Delete Post" button</li>
            <li>Enjoy writing!!</li>
        </ol>
    </h4>
    
</div>
<div class="container-fluid" id="headers">
    <%  posts.forEach(function(post){ %>
        <h1><%=post.title%></h1>
        <h3><%=post.content.substring(0,100)%>...
        <a href="/post/<%=post._id%>">Read More</a>
        </h3>
        <br>
         <button class="btn btn-warning btn-lg"><a href="/remove/<%=post._id%>" title="Be sure that you want to delete your blog.It is irreversible.">Delete Blog</a></button>
         
        
        
  <%   }) %>
    
</div>


<%- include("footer") -%>